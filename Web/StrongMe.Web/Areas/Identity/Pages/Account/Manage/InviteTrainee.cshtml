@page
@model InviteTraineeModel
@{
    ViewData["Title"] = "Invite Trainee";
    ViewData["ActivePage"] = ManageNavPages.InviteTrainee;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.TraineeEmail"></label>
                <input asp-for="Input.TraineeEmail" class="form-control" />
                <span asp-validation-for="Input.TraineeEmail" class="text-danger"></span>
            </div>
            <button id="invite-trainee-button" type="submit" class="btn btn-primary">Invite</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}