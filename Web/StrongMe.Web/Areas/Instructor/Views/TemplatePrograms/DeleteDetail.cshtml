@model StrongMe.Web.ViewModels.Instructor.TemplatePrograms.EditTemplateProgramDetailInputModel
@{
    this.ViewData["Title"] = "Delete " + @Model.ExerciseName;
}

<h1>@this.ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeriesCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeriesCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repetitions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repetitions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Break)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Break)
        </dd>
    </dl>

    <form asp-action="DeleteDetail">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="TemplateProgramId" />
        <input type="submit" value="Delete" class="btn btn-primary" asp-action="DeleteDetail" asp-controller="TemplatePrograms" asp-route-id="@Model.Id" />
        <a asp-action="Edit" asp-route-id="@Model.TemplateProgramId">Back to List</a>
    </form>
</div>
