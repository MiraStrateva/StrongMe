@model StrongMe.Web.ViewModels.Trainee.PersonalPrograms.EditPersonalProgramInputModel
@{
    this.ViewData["Title"] = "Edit personal program";
    var templatePrograms = this.Model.TemplatePrograms.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" id="editForm" enctype="multipart/form-data">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TemplateProgramId"></label>
        <select asp-for="TemplateProgramId" class="form-control" asp-items="templatePrograms"></select>
        <span asp-validation-for="TemplateProgramId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr />
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TraineeId" />
    <input type="submit" class="btn btn-primary" value="Save changes"/>
</form>