@model StrongMe.Web.ViewModels.Instructor.Common.SelectExerciseViewModel
@{
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
    var bodyPartsItems = this.Model.BodyPartsItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select id="exercise-select-category" asp-for="CategoryId" class="form-control exercise-select" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BodyPartId"></label>
        <select id="exercise-select-bodypart" asp-for="BodyPartId" class="form-control exercise-select" asp-items="bodyPartsItems"></select>
        <span asp-validation-for="BodyPartId" class="text-danger"></span>
    </div>
    <partial name="_ExerciseListPartial" model="@Model.ExercisesItems" />
</div>