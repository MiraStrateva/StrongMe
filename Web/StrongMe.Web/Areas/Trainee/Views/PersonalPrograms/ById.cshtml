@model StrongMe.Web.ViewModels.Trainee.PersonalPrograms.SinglePersonalProgramViewModel
@{
    this.ViewData["Title"] = Model.TemplateProgramName;
}

<h1>@this.ViewData["Title"]</h1>
<br />
<p>@Model.Description</p>
<br />

@foreach (var detail in Model.TemplateProgramDetails)
{
    <div class="row col-md-12">
        <h3>@detail.ExerciseName</h3>
    </div>
    <div class="row box-shadow col-md-6">
        <img class="img-fluid" src="@detail.ImageUrl" alt="@detail.ExerciseName" />
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Series Count</th>
                <th scope="col">Repetitions</th>
                <th scope="col">Break</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@detail.SeriesCount</td>
                <td>@detail.Repetitions</td>
                <td>@detail.Break</td>
            </tr>
        </tbody>
    </table>
    <hr />
}
<button class="btn btn-warning" onclick="window.print()">Print</button>